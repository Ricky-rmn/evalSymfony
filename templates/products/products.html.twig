{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .product-image { width: 200px; height: auto; } 
</style>

<div class="example-wrapper">
    <h1>Nos produits.</h1>

    <h2> Veuillez trouver ici la liste de tous nos produits.</h2>
    <table border=1>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Image</th>
            <th>Stock</th>
        </tr>
        {% for product in tabProduct %}  
            <tr>
                <td><a href="{{ path('my_product', {'id': product.id}) }}">{{ product.nom }}</a></td>
                <td>{{ product.description }}</td>
                <td><img class="product-image" src="{{ asset(product.image) }}" alt="Product Image"></td>
                <td>{{ product.stock }}</td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
